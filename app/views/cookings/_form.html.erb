<%= form_with model:cooking, url: cookings_path, local:true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control cooking_title' %>
  </div>
  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :body, class: 'form-control cooking_body' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Cooking',class: 'btn btn-success' %>
  </div>
<% end %>